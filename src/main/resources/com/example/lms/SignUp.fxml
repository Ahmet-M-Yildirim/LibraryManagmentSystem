<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import java.lang.*?>
<?import java.util.*?>
<?import javafx.scene.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<AnchorPane id="AnchorPane" prefHeight="521.0" prefWidth="345.0" stylesheets="@../../../css/dark_Theme.css" xmlns="http://javafx.com/javafx/8" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.lms.SignUpController">
    <children>
        <VBox layoutX="-2.0" layoutY="1.0" prefHeight="349.0" prefWidth="345.0">
            <children>
                <TextField fx:id="usernameField" promptText="Username">
                    <VBox.margin>
                        <Insets bottom="20.0" left="20.0" right="20.0" top="30.0" />
                    </VBox.margin>
                </TextField>
                <TextField fx:id="mailField" layoutX="30.0" layoutY="40.0" promptText="E-Mail">
                    <VBox.margin>
                        <Insets bottom="20.0" left="20.0" right="20.0" top="30.0" />
                    </VBox.margin>
                </TextField>
                <TextField fx:id="PhoneField" layoutX="30.0" layoutY="115.0" promptText="Phone Number">
                    <VBox.margin>
                        <Insets bottom="20.0" left="20.0" right="20.0" top="30.0" />
                    </VBox.margin>
                </TextField>
                <PasswordField fx:id="passWordField" layoutX="30.0" layoutY="190.0" promptText="PassWord">
                    <VBox.margin>
                        <Insets bottom="20.0" left="20.0" right="20.0" top="30.0" />
                    </VBox.margin>
                </PasswordField>
                <PasswordField fx:id="ConfirmField" layoutX="30.0" layoutY="265.0" promptText="Confirm PassWord">
                    <VBox.margin>
                        <Insets bottom="20.0" left="20.0" right="20.0" top="30.0" />
                    </VBox.margin>
                </PasswordField>
            <CheckBox fx:id="checkButton" mnemonicParsing="false" onAction="#checkAction" text="Show Password" textFill="WHITE">
               <VBox.margin>
                  <Insets left="20.0" />
               </VBox.margin>
            </CheckBox>
            </children>
        </VBox>
        <Button fx:id="Sign_InButton" layoutX="49.0" layoutY="449.0" mnemonicParsing="false" onAction="#SignInAction" prefHeight="52.0" prefWidth="74.0" text="Sign In" />
        <Button fx:id="CancelButton" layoutX="204.0" layoutY="449.0" mnemonicParsing="false" onAction="#CancelAction" prefHeight="52.0" prefWidth="74.0" text="Cancel" />
    </children>
</AnchorPane>
