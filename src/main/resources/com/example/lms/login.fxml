        <Button fx:id="LoginButton" layoutX="66.0" layoutY="185.0" mnemonicParsing="false" onAction="#LoginAction" onKeyPressed="#LoginKeyAction" prefHeight="37.0" prefWidth="91.0" styleClass="menuItem" text="Login" />
